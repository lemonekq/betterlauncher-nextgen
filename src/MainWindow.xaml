                            <Storyboard x:Name="handler_logo_1_opacity_out">
                                <DoubleAnimation From="1" To="0" Duration="00:00:0.5" BeginTime="00:00:1.5"
                                    Storyboard.TargetName="handler_logo_1" 
                                    Storyboard.TargetProperty="Opacity">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"></CubicEase>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
