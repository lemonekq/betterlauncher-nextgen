        <!-- contenthandler -->


        <TabControl x:Name="contenthandler" Margin="68,10,64,29" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <TabItem x:Name="contenthandler_login" Header="Login">
                <Grid>
                    <!-- StatusBar -->
                    <StackPanel x:Name="contenthandler_login_statusbar" Orientation="Horizontal" Margin="0,10,0,593" HorizontalAlignment="Center" Width="Auto">
                        <Label x:Name="contenthandler_login_statusbar_text_1" FontSize="14" FontFamily="Segoe UI Black" Foreground="#FFA56EFF" Content="Zaloguj się" Height="29"/>
                        <Rectangle Width="340" Height="1" Fill="#FF2D2D2D" Margin="20,0,20,0" />
                        <Label x:Name="contenthandler_login_statusbar_text_2" FontSize="14" FontFamily="Segoe UI Black" Foreground="#7FFFFFFF" Content="Wybierz wersję gry" Height="29"/>
                        <Rectangle Width="340" Height="1" Fill="#FF2D2D2D" Margin="20,0,20,0" />
                        <Label x:Name="contenthandler_login_statusbar_text_3" FontSize="14" FontFamily="Segoe UI Black" Foreground="#7FFFFFFF" Content="Uruchamianie Gry" Height="29"/>
