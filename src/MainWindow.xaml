                </EventTrigger>

                <EventTrigger RoutedEvent="Button.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <Storyboard x:Name="launch_button_mouseout_ScaleX">
                                <DoubleAnimation From="1.05" To="1" Duration="00:00:0.5" BeginTime="00:00:00"
